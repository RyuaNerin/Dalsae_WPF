<Window x:Class="Dalsae.WindowAndControl.PinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dalsae"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="Pin 입력" Height="100" Width="330" WindowStartupLocation="CenterOwner" KeyDown="pinWIndow_KeyDown" Activated="Window_Activated">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap"
                   Text="웹 페이지에 나와있는 7자리 숫자를 입력 해주세요." VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" AcceptsReturn="False" HorizontalAlignment="Left" Height="23" Margin="26,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="button" Content="확인" HorizontalAlignment="Left" Margin="230,31,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
